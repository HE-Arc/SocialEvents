<div id="event-profil-page"/>

<section class="show">
  <div class="show-body">
    <div class="profile-main-content">
      <h1 class="profile-main-title"><%= @is_my_profile ? 'Your informations' : 'User informations' %></h1>
        <div class="profile-main-leftcolumn">
          <%= hidden_field_tag 'user_id', @user.id, { :id => "user_id" } %>
          <%= image_tag(@user.profile_picture(200, 200), :alt => "Profile picture", :class => "profile-image") %>
        </div>
        <div class="profile-main-rightcolumn">
            <p class="profile-main-title-inner"><%= @user.first_name %> <%= @user.last_name %></p>
            <p><label>Shared events:</label> <%= @user.contributions_counter %></p>
          
            <p>Contribute to our website by sharing your events</p>

          <% if @is_my_profile %>
              <select name="Icecream Flavours" class="drop-down" id="drop-down">
                  <option value="bar">Bar</option>
                  <option value="party">Party</option>
                  <option value="concert">Concert</option>
                  <option value="nightclub">Nightclub</option>
                  <option value="show">Show</option>
                  <option value="music">Music</option>
                  <option value="beer">Beer</option>
                  <option value="art">Art</option>
                  <option value="cinema">Cinema</option>
                  <option value="event">Event</option>
              </select>
            <button style="width:69%; height:40px;" id="import">Share more events</button>            
            
            <p class="terms-and-conditions">Public information is any information you share with a public audience, as well as information in your Public Profile, or content you share on our website. Public information is available to anyone on or off our Services and can be seen or accessed through. By clicking on "Share more events" you automatically accepts these terms and conditions.</p>
          <% end %>
      </div>
    </div>

    <div class="profile-main-content">
      <span class="title-complement">
        <%= button_to "Delete all", "/events", :class => "btn delete-confirm", :method => :delete if @is_my_profile and @events.count > 0 %>
      </span>
      <h1 class="profile-main-title"><%= @is_my_profile ? 'Your contributions' : 'User contributions' %></h1>
        
      <ul class="flex-container flex-container-events">
      </ul>
      <ul class="flex-container flex-container-error">          
        <li class="flex-item">
          There is unfortunately no more events
        </li>
      </ul>
    </div>
  </div>
</section>