<% content_for :javascript_includes do %>
  <script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
  <%= raw javascript_include_view_js %>
<% end %>

<div class="image-cover-div">
  <%= image_tag(@event.picture, :alt => "cover image" ,:class => "img-cover") %>
</div>
<section class="show">
  <div class="show-body">
    <div class="show-title">
      <p class="title-event"><%= @event.title %></p>
      <p class="date-event">From <%= @event.start_time.strftime("%d %B %Y") %> to <%= @event.end_time.strftime("%d %B %Y") %></p>
    </div>
    <div class="show-content">
      <div class="show-information">
        <div>Cat√©gorie: <%= @event.category %></div>
        <div>Localisation: <%= @event.event_location.city + " " + @event.event_location.canton %></div>
        <div>Utilisateur: <%= @user.first_name %> <%= @user.last_name %></div>
      </div>
      <div class="show-description">
        <%= @event.description %>
      </div>

    </div>
  </div>

    <div class="map">
      <%= hidden_field_tag 'lat', @events_location.latitude %>
      <%= hidden_field_tag 'lon', @events_location.longitude %>
      <div id="map" style='width: 100%; height: 400px;'></div>
    </div>
</section>

